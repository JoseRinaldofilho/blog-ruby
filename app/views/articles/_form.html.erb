<%= form_with model: articles do |form| %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %> <!--  #text_field-->
    <%= articles.errors.full_messages_for(:title).each do |message|%>
      <div><%= message %>

      </div>
    <% end %>
  </div>
  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div>

    <%= form.submit %>
  </div>

<% end %>